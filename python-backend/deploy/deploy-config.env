# ==============================================================================
# Deployment Configuration for Plataforma FastAPI Backend
# ==============================================================================

# Docker registry settings
REGISTRY=ghcr.io
IMAGE_NAME=plataforma-fastapi

# Kubernetes settings
NAMESPACE=plataforma-fastapi

# Environment-specific settings
# These will be overridden based on the deployment environment

# Staging environment
STAGING_REGISTRY=ghcr.io
STAGING_IMAGE_NAME=plataforma-fastapi
STAGING_REPLICAS=2
STAGING_RESOURCE_LIMITS_CPU=1000m
STAGING_RESOURCE_LIMITS_MEMORY=2Gi
STAGING_RESOURCE_REQUESTS_CPU=500m
STAGING_RESOURCE_REQUESTS_MEMORY=1Gi

# Production environment
PRODUCTION_REGISTRY=ghcr.io
PRODUCTION_IMAGE_NAME=plataforma-fastapi
PRODUCTION_REPLICAS=3
PRODUCTION_RESOURCE_LIMITS_CPU=2000m
PRODUCTION_RESOURCE_LIMITS_MEMORY=4Gi
PRODUCTION_RESOURCE_REQUESTS_CPU=1000m
PRODUCTION_RESOURCE_REQUESTS_MEMORY=2Gi

# Health check settings
HEALTH_CHECK_TIMEOUT=300
HEALTH_CHECK_RETRIES=10
HEALTH_CHECK_INTERVAL=10

# Deployment settings
DEPLOYMENT_TIMEOUT=600
ROLLBACK_ON_FAILURE=true

# Database migration settings
RUN_MIGRATIONS=true
MIGRATION_TIMEOUT=300

# Monitoring settings
ENABLE_MONITORING=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Backup settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# Security settings
SECURITY_SCAN_ENABLED=true
VULNERABILITY_THRESHOLD=high

# Notification settings (optional)
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=
# EMAIL_NOTIFICATIONS=true