{
  "name": "@plataforma/security-layer",
  "version": "1.0.0",
  "description": "Comprehensive security layer for plataforma.app with CSP, sandboxing, rate limiting, audit logging, JWT, and RBAC",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "winston": "^3.11.0",
    "cors": "^2.8.5",
    "joi": "^17.11.0",
    "uuid": "^11.1.0",
    "node-cache": "^5.1.2",
    "crypto": "^1.0.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^10.0.0",
    "@types/node": "^22.18.0",
    "typescript": "^5.5.3",
    "tsup": "^8.5.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^9.14.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "express": "^4.18.2"
  },
  "keywords": [
    "security",
    "csp",
    "sandbox",
    "rate-limiting",
    "audit",
    "jwt",
    "rbac",
    "plataforma"
  ],
  "author": "Plataforma Team",
  "license": "MIT"
}