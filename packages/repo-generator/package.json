{
  "name": "@plataforma/repo-generator",
  "version": "1.0.0",
  "description": "Repository Generator for Plataforma.app modules - Automatically creates and configures GitHub repositories",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "plataforma-repo": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "plataforma",
    "repository",
    "github",
    "automation",
    "cli",
    "module-federation"
  ],
  "author": "Plataforma.app Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@plataforma/module-contracts": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "yaml": "^2.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/semver": "^7.5.1",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}