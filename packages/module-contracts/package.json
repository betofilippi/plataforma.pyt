{
  "name": "@plataforma/module-contracts",
  "version": "1.0.0",
  "description": "Comprehensive module interface contracts and validation system for plataforma.app",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./contracts": {
      "import": "./dist/contracts/index.js",
      "types": "./dist/contracts/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./communication": {
      "import": "./dist/communication/index.js",
      "types": "./dist/communication/index.d.ts"
    },
    "./validation": {
      "import": "./dist/validation/index.js",
      "types": "./dist/validation/index.d.ts"
    },
    "./registry": {
      "import": "./dist/registry/index.js",
      "types": "./dist/registry/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "schemas/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "validate-schemas": "ajv compile -s \"schemas/**/*.json\""
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "plataforma",
    "modules",
    "contracts",
    "typescript",
    "validation",
    "registry"
  ],
  "author": "Plataforma Team",
  "license": "MIT",
  "publishConfig": {
    "access": "restricted"
  }
}