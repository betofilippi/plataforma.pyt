{
  "name": "@plataforma/module-loader",
  "version": "1.0.0",
  "description": "Dynamic module loader system for plataforma.app with React components, lifecycle hooks, and communication system",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./cache": {
      "import": "./dist/cache/index.esm.js",
      "require": "./dist/cache/index.js",
      "types": "./dist/cache/index.d.ts"
    },
    "./communication": {
      "import": "./dist/communication/index.esm.js",
      "require": "./dist/communication/index.js",
      "types": "./dist/communication/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "module-federation",
    "dynamic-loading",
    "react",
    "plataforma",
    "microfrontends"
  ],
  "author": "Plataforma Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@plataforma/vite-plugin-module-federation": "*",
    "eventemitter3": "^5.0.1",
    "lru-cache": "^10.2.0",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/semver": "^7.5.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.0",
    "rollup-plugin-dts": "^6.1.0",
    "typescript": "^5.4.3"
  }
}