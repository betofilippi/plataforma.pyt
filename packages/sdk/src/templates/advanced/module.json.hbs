{
  "name": "{{name}}",
  "displayName": "{{displayName}}",
  "description": "{{description}}",
  "version": "{{version}}",
  "category": "{{category}}",
  "template": "advanced",
  "author": {
    "name": "Desenvolvedor",
    "email": "dev@example.com"
  },
  "license": "MIT",
  "features": {
    "windowSystem": true,
    "database": true,
    "ai": false,
    "realtime": {{#if features.realtime}}true{{else}}false{{/if}}
  },
  "database": {
    "schema": "{{name}}_schema",
    "tables": [
      {
        "name": "{{name}}_data",
        "columns": [
          { "name": "id", "type": "UUID", "primaryKey": true, "default": "gen_random_uuid()" },
          { "name": "name", "type": "TEXT", "required": true },
          { "name": "description", "type": "TEXT" },
          { "name": "status", "type": "TEXT", "default": "active" },
          { "name": "created_at", "type": "TIMESTAMPTZ", "default": "now()" },
          { "name": "updated_at", "type": "TIMESTAMPTZ", "default": "now()" },
          { "name": "created_by", "type": "UUID", "references": "auth.users(id)" }
        ],
        "indexes": [
          { "columns": ["status"] },
          { "columns": ["created_at"] },
          { "columns": ["created_by"] }
        ],
        "rls": {
          "enabled": true,
          "policies": [
            {
              "name": "Users can view their own data",
              "action": "SELECT",
              "condition": "created_by = auth.uid()"
            },
            {
              "name": "Users can insert their own data",
              "action": "INSERT",
              "condition": "created_by = auth.uid()"
            },
            {
              "name": "Users can update their own data",
              "action": "UPDATE",
              "condition": "created_by = auth.uid()"
            }
          ]
        }
      }
    ]
  },
  "permissions": {
    "read": ["user", "admin"],
    "write": ["user", "admin"],
    "execute": ["user", "admin"],
    "database": {
      "create": ["user", "admin"],
      "read": ["user", "admin"],
      "update": ["user", "admin"],
      "delete": ["admin"]
    }
  },
  "dependencies": {
    "@plataforma/core-window-system": "^1.0.0",
    "@plataforma/design-system": "^1.0.0",
    "@plataforma/auth-system": "^1.0.0",
    "@supabase/supabase-js": "^2.38.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0"
  },
  "scripts": {
    "dev": "plataforma dev --mock",
    "build": "plataforma build",
    "test": "plataforma test",
    "validate": "plataforma validate",
    "db:migrate": "plataforma db migrate",
    "db:seed": "plataforma db seed"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "assets",
    "database",
    "README.md"
  ],
  "plataforma": {
    "version": "2.0.0",
    "minVersion": "1.0.0",
    "icon": "database",
    "color": "#10B981",
    "windowOptions": {
      "defaultWidth": 1000,
      "defaultHeight": 700,
      "minWidth": 600,
      "minHeight": 400,
      "resizable": true,
      "maximizable": true
    }
  }
}