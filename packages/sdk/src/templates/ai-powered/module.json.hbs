{
  "name": "{{name}}",
  "displayName": "{{displayName}}",
  "description": "{{description}}",
  "version": "{{version}}",
  "category": "{{category}}",
  "template": "ai-powered",
  "author": {
    "name": "Desenvolvedor",
    "email": "dev@example.com"
  },
  "license": "MIT",
  "features": {
    "windowSystem": true,
    "database": {{#if features.database}}true{{else}}false{{/if}},
    "ai": true,
    "realtime": {{#if features.realtime}}true{{else}}false{{/if}},
    "chat": true,
    "nlp": true,
    "imageAnalysis": false,
    "voiceRecognition": false
  },
  "ai": {
    "providers": [
      {
        "name": "openai",
        "models": ["gpt-4", "gpt-3.5-turbo"],
        "apiKey": "OPENAI_API_KEY"
      },
      {
        "name": "anthropic",
        "models": ["claude-3-opus", "claude-3-sonnet"],
        "apiKey": "ANTHROPIC_API_KEY"
      }
    ],
    "defaultProvider": "openai",
    "defaultModel": "gpt-3.5-turbo",
    "maxTokens": 2000,
    "temperature": 0.7,
    "features": {
      "chat": {
        "enabled": true,
        "contextWindow": 4000,
        "memoryEnabled": true
      },
      "analysis": {
        "enabled": true,
        "types": ["text", "data", "sentiment"]
      },
      "generation": {
        "enabled": true,
        "types": ["text", "code", "suggestions"]
      }
    }
  },
  "permissions": {
    "read": ["user", "admin"],
    "write": ["user", "admin"],
    "execute": ["user", "admin"],
    "ai": {
      "chat": ["user", "admin"],
      "analyze": ["user", "admin"],
      "generate": ["user", "admin"]
    }
  },
  "dependencies": {
    "@plataforma/core-window-system": "^1.0.0",
    "@plataforma/design-system": "^1.0.0",
    "@plataforma/auth-system": "^1.0.0",
    "openai": "^4.24.0",
    "@anthropic-ai/sdk": "^0.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0"
  },
  "scripts": {
    "dev": "plataforma dev --mock",
    "build": "plataforma build",
    "test": "plataforma test",
    "validate": "plataforma validate",
    "ai:test": "plataforma ai test"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "assets",
    "ai-config",
    "README.md"
  ],
  "plataforma": {
    "version": "2.0.0",
    "minVersion": "1.0.0",
    "icon": "brain",
    "color": "#8B5CF6",
    "windowOptions": {
      "defaultWidth": 1200,
      "defaultHeight": 800,
      "minWidth": 800,
      "minHeight": 500,
      "resizable": true,
      "maximizable": true
    }
  }
}